<%- include('./partials/head.ejs')  %> 


    <body>
        <%- include('./partials/home-navbar.ejs')  %> 
        <div class="container mt-3">
            <div class="jumbotron">
                <h1 class="display-4">Bem vindo!</h1>
                <p class="lead">Este é um simples blog para documentar a jornada dentro da programação!</p>
                <a class="btn btn-primary btn-lg" href="/" role="button">Saiba mais</a>
              </div>
            <% articles.forEach(article => { %>
                <div class="card mb-3">
                    <div class="card-header">
                        <h2>
                            <%= article.title %>
                        </h2> 
                    </div>
                    <div class="card-body">
                        <a href="#" class="btn btn-primary">Ler Artigo</a>
                    </div>
                </div>
            <% }) %> 
        </div>
    </body>

<%- include('./partials/footer.ejs')  %>    
